<div class="container mx-auto h-screen w-screen max-w-2xl">
  <h1 class="text-xl text-center underline">Player resources and loyalties</h1>
  <div class="grid grid-cols-2 gap-4 m-2">
    <div id="player_resources" class="grid grid-cols-1 gap-1 text-center">
      <%if @no_resources%>
        <p class="bg-red-200 border-4 border-black rounded-lg text-center text-lg">You have no gold, soldiers, or spies.</p>
      <%else%>
        <% @player_resources&.each do |player_resource| %>
          <%= render player_resource %>
        <% end %>
      <%end%>
    </div>
    <div id="player_resources">
      <% @player_loyalty_roles&.each do |player_loyalty_role| %>
        <%= render player_loyalty_role %>
      <% end %>
    </div>
  </div>
  <div class="text-center p-2 m-2">
  <%= link_to "Return to game page", game_page_show_path(), class:"bg-gradient-to-b from-red-300 to-red-500 border-4 border-black rounded-lg text-xl p-1"%><br/>
  </div>
</div>

